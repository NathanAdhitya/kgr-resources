    <titles>
      <title>Hanya Dekat Allah Saja</title>
    </titles>
    <authors>
      <author>PS</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>Hanya Dekat Allah Saja Aku Tenang<br/>Dari Pada-Nyalah Keselamatan Ku</lines>
    </verse>
    <verse name="v1b">
      <lines>Hanya Dia Gunung Batuku<br/>Hanya Dia Kota Bentengku<br/>Aku Tidak Akan Goyah<br/>Slama-Lamanya</lines>
    </verse>
    <verse name="v1c">
      <lines/>
    </verse>
  </lyrics>
