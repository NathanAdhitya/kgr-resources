    <titles>
      <title>PS 545 - Ya Yesus, Bersabdalah</title>
    </titles>
    <authors>
      <author>0</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>Ya Yesus bersabdalah !</lines>
    </verse>
    <verse name="v1b">
      <lines>"Kasihi Tuhan Allahmu"<br/>Hidupku, Tuhan, penuh bagi-Mu</lines>
    </verse>
    <verse name="v1c">
      <lines>"Kasihilah sesamamu"<br/>'Kan kulayani dengan karyaku</lines>
    </verse>
    <verse name="v1d">
      <lines>"Jadilah engkau terang dunia"<br/>'Kan kuterangi pikiran keruh</lines>
    </verse>
    <verse name="v1e">
      <lines>"Jadilah kau garam dunia"<br/>'Kan kugarami semua umat-Mu</lines>
    </verse>
    <verse name="v1f">
      <lines/>
    </verse>
  </lyrics>
</song>
